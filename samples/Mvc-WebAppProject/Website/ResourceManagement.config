<?xml version="1.0"?>
<almWitt.web.resourceManagement manageDependencies="true">
  <clientScripts>
    <group consolidatedUrl="~/Scripts/Consolidated/Shared/JQuery.js">
      <include>
        <add pattern="~/Scripts/jquery-.+\.min\.js" />
        <add pattern="~/Scripts/jquery.+\.min\.js" />
      </include>
    </group>
    <group consolidatedUrl="~/Scripts/Consolidated/Shared/Microsoft.js">
      <include>
        <add pattern="~/Scripts/^Microsoft.+\.js$" />
      </include>
      <exclude>
        <add pattern="\.debug\.js$" />
      </exclude>
    </group>
    <group consolidatedUrl="~/Scripts/Consolidated/Controllers/{controller}.js">
      <include>
        <add pattern="~/Views/(?'controller'\w+)/.+" />
      </include>
    </group>
  </clientScripts>
  <cssFiles>
    <group consolidatedUrl="~/Content/Consolidated/Shared.css">
      <include>
        <add pattern="~/Content/.+" />
        <add pattern="~/Views/Shared/.+" />
      </include>
    </group>
    <group consolidatedUrl="~/Content/Consolidated/Controllers/{controller}.css">
      <include>
        <add pattern="~/Views/(?'controller'\w+)/.+" />
      </include>
    </group>
  </cssFiles>
  <plugins>
    <!-- add support for .less files -->
    <add type="AlmWitt.Web.ResourceManagement.Less.LessResourceManagementPlugin, AlmWitt.Web.ResourceManagement.Less, Version=1.0.0.0, Culture=neutral" />
  </plugins>
</almWitt.web.resourceManagement>